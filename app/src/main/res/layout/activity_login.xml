<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/review_back"
    android:orientation="vertical"
    tools:context=".Fragment.LoginFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:elevation="3dp"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="50dp"
                android:background="@color/mavi"
                app:srcCompat="@drawable/login" />


            <EditText
                android:id="@+id/email"
                style="@style/RegisterEditTextStyle"
                android:hint="Username or Email"
                android:text="cumasoyak@gmail.com" />

            <EditText
                android:id="@+id/parola"
                style="@style/RegisterEditTextStyle"
                android:hint="Parola"
                android:text="123456" />

            <Button
                android:id="@+id/login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/custom_register_login_button"
                android:text="Giriş"
                android:textColor="@color/beyaz" />

            <TextView
                android:id="@+id/textView11"
                style="@style/RegistretionTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/capriola"
                android:text="Parolamı unutum"
                android:textColor="@color/mavi" />

            <LinearLayout
                android:id="@+id/linearLayout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="50dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView12"
                    style="@style/RegistretionTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:fontFamily="@font/capriola"
                    android:text="Don't you an account?"
                    android:textColor="@color/text_color_black" />

                <TextView
                    android:id="@+id/kayit_buton"
                    style="@style/RegistretionTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/capriola"
                    android:text="Sign Up"
                    android:textColor="@color/mavi" />

            </LinearLayout>
        </LinearLayout>
    </FrameLayout>


</ScrollView>



