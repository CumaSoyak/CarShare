<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.SoforFragment">
<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/tarih_sec"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/tarih_sec"
        android:fontFamily="@font/baloo"
        android:text="Tarih seç"
        android:textColor="@color/beyaz"
        app:layout_constraintBottom_toTopOf="@+id/saat_sec"
        app:layout_constraintEnd_toStartOf="@+id/iki_tarih_arasi"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kisi_image2" />

    <ImageButton
        android:id="@+id/iki_saat_arasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:background="?android:selectableItemBackground"
        android:src="@mipmap/iki_tarih"
        app:layout_constraintBottom_toBottomOf="@+id/saat_sec"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/saat_sec"
        app:layout_constraintTop_toTopOf="@+id/saat_sec" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="İki tarih arası"
        android:textColor="@color/kahverengi"
        android:textSize="10dp"
        app:layout_constraintEnd_toEndOf="@+id/iki_saat_arasi"
        app:layout_constraintStart_toStartOf="@+id/iki_saat_arasi"
        app:layout_constraintTop_toBottomOf="@+id/iki_saat_arasi" />

    <ImageButton
        android:id="@+id/iki_tarih_arasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:background="?android:selectableItemBackground"
        android:src="@mipmap/iki_tarih"
        app:layout_constraintBottom_toBottomOf="@+id/tarih_sec"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tarih_sec"
        app:layout_constraintTop_toTopOf="@+id/tarih_sec" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="İki saat  arası"
        android:textSize="10dp"
        app:layout_constraintEnd_toEndOf="@+id/iki_tarih_arasi"
        app:layout_constraintStart_toStartOf="@+id/iki_tarih_arasi"
        app:layout_constraintTop_toBottomOf="@+id/iki_tarih_arasi" />

    <Button
        android:id="@+id/saat_sec"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/tarih_sec"
        android:fontFamily="@font/baloo"
        android:text="Saat Seç"
        android:textColor="@color/beyaz"
        app:layout_constraintBottom_toTopOf="@+id/aciklama"
        app:layout_constraintEnd_toStartOf="@+id/iki_saat_arasi"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tarih_sec" />

    <ImageView
        android:id="@+id/kisi_image2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/yolcu_siyah"
        app:layout_constraintBottom_toTopOf="@+id/tarih_sec"
        app:layout_constraintEnd_toStartOf="@+id/kisi_text2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView6" />

    <TextView
        android:id="@+id/kisi_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kaç Kişi Götürebilirsin"
        app:layout_constraintBottom_toBottomOf="@+id/kisi_image2"
        app:layout_constraintEnd_toStartOf="@+id/kisi_spinner"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/kisi_image2"
        app:layout_constraintTop_toTopOf="@+id/kisi_image2" />

    <Spinner
        android:id="@+id/kisi_spinner"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/kisi_text2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/kisi_text2"
        app:layout_constraintTop_toTopOf="@+id/kisi_text2" />

    <Spinner
        android:id="@+id/nereden"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Nereden "
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/plaka"
        app:layout_constraintEnd_toStartOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/nereye"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Nereye"
        android:inputType="text|textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/nereden"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/nereden" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/yon"
        app:layout_constraintBottom_toBottomOf="@+id/nereden"
        app:layout_constraintEnd_toStartOf="@+id/nereye"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/nereden"
        app:layout_constraintTop_toTopOf="@+id/nereden" />

    <EditText
        android:id="@+id/plaka"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Plaka no : Örn 51 AB XXX"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/imageView6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nereden" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/sofor_siyah"
        app:layout_constraintBottom_toTopOf="@+id/kisi_image2"
        app:layout_constraintEnd_toEndOf="@+id/kisi_image2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/kisi_image2"
        app:layout_constraintTop_toBottomOf="@+id/plaka" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Araç cinsi"
        app:layout_constraintBottom_toBottomOf="@+id/imageView6"
        app:layout_constraintEnd_toEndOf="@+id/kisi_text2"
        app:layout_constraintEnd_toStartOf="@+id/arac_cinci_spinner"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageView6"
        app:layout_constraintStart_toStartOf="@+id/kisi_text2"
        app:layout_constraintTop_toTopOf="@+id/imageView6" />

    <Spinner
        android:id="@+id/arac_cinci_spinner"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="@+id/kisi_spinner"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/kisi_spinner"
        app:layout_constraintTop_toTopOf="@+id/textView5" />

    <EditText
        android:id="@+id/aciklama"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:hint="Açıklama ekle..."
        android:inputType="textPersonName"
        android:paddingLeft="20dp"
        app:layout_constraintBottom_toTopOf="@+id/onayla"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/saat_sec" />

    <Button
        android:id="@+id/onayla"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/tarih_sec"
        android:fontFamily="@font/baloo"
        android:text="İlan ver"
        android:textColor="@color/beyaz"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aciklama" />

</android.support.constraint.ConstraintLayout>

</ScrollView>