<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/mavi</item>
        <item name="colorPrimaryDark">@color/mavi</item>
        <item name="colorAccent">@color/mavi</item>

    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="RegistretionTextStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/registerText</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="RegisterEditTextStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">@dimen/editTextMarginStart</item>
        <item name="android:layout_marginEnd">@dimen/editTextMarginEnd</item>
        <item name="android:layout_marginTop">@dimen/editTextMarginTop</item>
        <item name="android:layout_marginBottom">@dimen/editTextMarginBottom</item>
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textColorHint">@color/text_color</item>
    </style>

    <style name="LinerLayoutStyle">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">@dimen/linearTop</item>
        <item name="android:layout_marginBottom">@dimen/linearBottom</item>
        <item name="android:layout_marginStart">@dimen/linarStart</item>
        <item name="android:layout_marginEnd">@dimen/linarEnd</item>
    </style>

    <style name="HelpLayoutStyle">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/mavi</item>
        <item name="android:background">@drawable/custom_edit_button</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginStart">@dimen/linarStart</item>
        <item name="android:layout_marginEnd">@dimen/linarEnd</item>
    </style>

    <style name="RelativeLayoutStyle">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">@dimen/linarStart</item>
        <item name="android:layout_marginEnd">@dimen/linarEnd</item>
        <item name="android:layout_marginTop">@dimen/linearTop</item>
        <item name="android:layout_marginBottom">@dimen/linearBottom</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MyÄ±nfoStyle">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">@dimen/linarStart</item>
        <item name="android:layout_marginEnd">@dimen/linarEnd</item>
        <item name="android:layout_marginTop">@dimen/linearTop</item>
        <item name="android:layout_marginBottom">@dimen/linearBottom</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_color_black</item>
    </style>


    <style name="AdvertCustomStyle">
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/custom_advert_edit</item>
        <item name="android:layout_margin">@dimen/editMargin</item>
        <item name="android:textColorHint">@color/text_color_black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/capriola</item>
        <item name="android:textColor">@color/text_color_black</item>

    </style>

    <style name="BottomSheetStyle">
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bottom_sheet_back</item>
        <item name="android:textColorHint">@color/text_color_black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/capriola</item>
        <item name="android:textColor">@color/text_color_black</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>

    <style name="ProfileTextViewStyle">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">@dimen/ProfileTextViewWidth</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginStart">@dimen/linarStart</item>
    </style>

    <style name="MenuStyle" parent="Theme.AppCompat.Light">
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="CityStyle">
        <item name="android:gravity">start</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:textColor">@color/text_color_black</item>
    </style>

    <style name="NameStyle">
        <item name="android:gravity">start</item>
        <item name="android:layout_width">120dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ReviewAdvertCardview">
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:radius">10dp</item>

    </style>

    <style name="ReviewTextStyle">
        <item name="android:fontFamily">@font/capriola</item>
    </style>

</resources>
