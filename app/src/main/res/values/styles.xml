<resources>

    <!-- Base application theme. -->
    <style nameSurname="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item nameSurname="colorPrimary">@color/colorPrimary</item>
        <item nameSurname="colorPrimaryDark">@color/mavi</item>
        <item nameSurname="colorAccent">@color/mavi</item>
    </style>

    <style nameSurname="RegistretionTextStyle">
        <item nameSurname="android:layout_height">wrap_content</item>
        <item nameSurname="android:layout_width">match_parent</item>
        <item nameSurname="android:textColor">@color/text_color</item>
        <item nameSurname="android:textSize">@dimen/registerText</item>
        <item nameSurname="android:gravity">center</item>
    </style>

    <style nameSurname="RegisterEditTextStyle">
        <item nameSurname="android:layout_height">wrap_content</item>
        <item nameSurname="android:layout_width">match_parent</item>
        <item nameSurname="android:layout_marginStart">@dimen/editTextMarginStart</item>
        <item nameSurname="android:layout_marginEnd">@dimen/editTextMarginEnd</item>
        <item nameSurname="android:layout_marginTop">@dimen/editTextMarginTop</item>
        <item nameSurname="android:layout_marginBottom">@dimen/editTextMarginBottom</item>
        <item nameSurname="android:background">@drawable/edit_text_background</item>
        <item nameSurname="android:gravity">center</item>
        <item nameSurname="android:textColor">@color/text_color</item>
        <item nameSurname="android:textColorHint">@color/text_color</item>
    </style>

    <style nameSurname="LinerLayoutStyle">
        <item nameSurname="android:layout_height">50dp</item>
        <item nameSurname="android:layout_width">match_parent</item>
        <item nameSurname="android:gravity">center</item>
        <item nameSurname="android:orientation">horizontal</item>
        <item nameSurname="android:layout_marginTop">@dimen/linearTop</item>
        <item nameSurname="android:layout_marginBottom">@dimen/linearBottom</item>
        <item nameSurname="android:layout_marginStart">@dimen/linarStart</item>
        <item nameSurname="android:layout_marginEnd">@dimen/linarEnd</item>
    </style>

    <style nameSurname="RelativeLayoutStyle">
        <item nameSurname="android:layout_height">50dp</item>
        <item nameSurname="android:layout_width">match_parent</item>
        <item nameSurname="android:layout_marginStart">@dimen/linarStart</item>
        <item nameSurname="android:layout_marginEnd">@dimen/linarEnd</item>
        <item nameSurname="android:layout_marginTop">@dimen/linearTop</item>
        <item nameSurname="android:layout_marginBottom">@dimen/linearBottom</item>
        <item nameSurname="android:gravity">center</item>
    </style>

    <style nameSurname="AdvertCustomStyle">
        <item nameSurname="android:layout_height">match_parent</item>
        <item nameSurname="android:gravity">center</item>
        <item nameSurname="android:background">@drawable/custom_advert_edit</item>
        <item nameSurname="android:layout_margin">@dimen/editMargin</item>
    </style>

    <style nameSurname="ProfileTextViewStyle">
        <item nameSurname="android:layout_height">match_parent</item>
        <item nameSurname="android:layout_width">@dimen/ProfileTextViewWidth</item>
        <item nameSurname="android:gravity">center_vertical</item>
        <item nameSurname="android:layout_marginStart">@dimen/linarStart</item>
    </style>

</resources>
